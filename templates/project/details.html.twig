 {% extends 'base.html.twig' %}

{% block title %}{{project.nom}}{% endblock %}

{% block body %}

    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
            <li><a href="{{path('app_home')}}">Accueil</a></li>
            <li>Détail de la réalisation</li>
            </ol>
            <h2>{{project.nom}}</h2>

        </div>
        </section><!-- End Breadcrumbs -->

        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

            <div class="col-lg-8">
                <div class="portfolio-details-slider swiper">
                <div class="swiper-wrapper align-items-center">

                    <div class="swiper-slide">
                    {# <img src="{{vich_uploader_asset(project ,'imageFile')}}" alt="">     #}
                    <img src="{{project.file}}" alt="" style="height: 570px; width: 100%;">    
                    </div>
                    
                    <div class="swiper-slide">
                    {# <img src="{{vich_uploader_asset(project ,'imageFile2')}}" alt="">     #}
                    <img src="{{project.file2}}" alt="" style="height: 570px; width: 100%;">    
                    </div>
                    
                </div>
                <div class="swiper-pagination"></div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="portfolio-info">
                <h3>Project information</h3>
                <ul>
                    <li><strong>Titre</strong>: {{project.nom}}</li><hr>
                    <li><strong>Type De Projet</strong>: {{project.typeDeProjet}}</li><hr>
                    <li><strong>Qualité Du Matériel</strong>: {{project.qualiteDuMateriel}}</li><hr>
                    <li><strong>Durée du projet</strong>: {{project.dureeDeProjet}}</li><hr>
                    <li><strong>Date De Réalisation</strong>: {{project.dateRealisation|date('d/m/y')}} </li><hr>
                    <li><strong>Ville</strong>: {{project.ville}}</li>
                </ul>
                </div>
            
            </div>
    <div class="portfolio-description">
    
                <h2>Description de cette réalisation:</h2>
                <p>  {{project.description}} </p>
                </div>
            </div>

        </div>
        </section><!-- End Portfolio Details Section -->


         {% include "commentaire/commentaires.html.twig" %}
    </main><!-- End #main -->

  {% endblock %}
